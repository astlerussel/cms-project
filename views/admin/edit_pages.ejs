<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Demon Slayer</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/admin_header') %>
    <nav>
        <ul>
            <li><a href="/admin">Dashboard</a></li>
            <li><a href="/admin/add-page">Add Page</a></li>
            <li><a href="/admin/edit-pages">Edit Pages</a></li>
            <li><a href="/admin/logout">Logout</a></li>
        </ul>
    </nav>
    <main>
        <h2>Edit Pages</h2>
        <table>
            <thead>
                <tr>
                    <th>Page Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <% pages.forEach(page => { %>
                    <tr>
                        <td><%= page.title %></td>
                        <td><a href="/admin/edit-page/<%= page._id %>" class="edit-link">Edit</a></td>
                        <td><a href="/admin/delete-page/<%= page._id %>" class="delete-link" onclick="return confirm('Are you sure you want to delete this page?');">Delete</a></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
